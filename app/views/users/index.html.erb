<div class="row">
  <div class="col-md-10 mx-md-auto">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td>
              <%= link_to "View", user, class: "btn btn-primary" %>
              <%= link_to "Delete", user, class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure you want to delete this user?"} %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
