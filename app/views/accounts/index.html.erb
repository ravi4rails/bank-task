<div class="row">
  <div class="col-md-10 mx-md-auto">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Account Name</th>
          <th>Account Number</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @accounts.each do |account| %>
          <tr>
            <td><%= account.bank_name %></td>
            <td><%= account.account_number %></td>
            <td><%= account.balance %></td>
            <td>
              <%= link_to "View", account, class: "btn btn-primary" %>
              <%= link_to "Edit", edit_account_path(account), class: "btn btn-secondary" %>
              <%= link_to "Delete", account, class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure you want to delete this account?"} %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="mt-3 mb-3">
      <%= link_to "Create New Account", new_account_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
