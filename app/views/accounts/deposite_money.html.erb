<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h4 class="card-title">Deposite Money</h4>
        </div>
        <div class="card-body">
          <h5>Available Balance: <%= @account.balance %></h5>
          <%= form_for :deposite, url: :update_deposite_amount_account, method: :patch do |f| %>
            <div class="form-group mt-4">
              <%= f.number_field :amount, class: "form-control", min: 1, required: true, placeholder: "Enter Amount to Deposite" %>
            </div>
            <div class="form-group">
              <%= f.submit "Deposite Money", class: "btn btn-primary" %>
              <%= link_to "Back", account_path(@account), class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>  
</div>
